
## PGK install
sudo pacman -Sy
sudo pacman -S ark autoconf automake bashtop binutils bison blueberry bluedevil bluez bluez-utils bpytop bridge-utils btrfs-progs cdrdao cdrtools cmatrix discord dnsmasq dolphin dolphin-emu dvd+rw-tools edk2-ovmf efibootmgr figlet firefox flex fwupd garcon gawk gcc gnome-disk-utility groff gtkmm gvfs gzip htop iptables-nft js78 k3b kate kdenlive lib32-libldap lib32-libva-mesa-driver lib32-mesa libreoffice-fresh libtool libva-intel-driver libva-mesa-driver libvirt libvirt-glib libvirt-python liquidctl lutris m4 make mousepad nano neofetch network-manager-applet obs-studio okteta openbsd-netcat openssh p7zip patch pavucontrol pcsclite pcsx2 pkgconf pulseaudio python-dnspython python-fonttools python-pip python-wheel qbittorrent qemu qemu-arch-extra radeontop ristretto sddm smartmontools steam stress sudo swtpm texinfo tree tumbler util-linux util-linux-libs vde2 vi vim virt-install virt-manager vlc wget which wireless_tools wpa_supplicant xarchiver xfce4 zram-generator zsh btop flameshot amd-ucode

echo "Do you want to install my AMD Drivers? 'y' for Yes 'N' to No"
read YN6

if [ $YN6 = "y" ]
  then
    sudo pacman -S lib32-vulkan-radeon vulkan-radeon amdvlk lib32-amdvlk lib32-mesa-vdpau mesa-vdpau
fi

echo "Do you want to install my Intel Drivers? 'y' for Yes 'N' to No"
read YN7

if [ $YN7 = "y" ]
    then
     sudo pacman -S xf86-video-intel vulkan-intel lib32-vulkan-intel
fi

echo "Do you want to install my NVidia Drivers? 'y' for Yes 'N' to No"
read YN8

if [ $YN8 = "y" ]
    then
     sudo pacman -S nvidia nvidia-utils
     mkdir /etc/pacman.d/hooks/
     cp -r nvidia.hook /etc/pacman.d/hooks/
fi

cd ..

git clone https://aur.archlinux.org/yay.git && cd yay && makepkg -si && yay -Sy

cd need\ files

clear

echo "do you want to install PIA VPN? 'y' for Yes 'N' for No"
read yn4

if [ $yn4 = "y" ]
    then
wget https://installers.privateinternetaccess.com/download/pia-linux-3.2-06857.run
chmod +x pia-linux-3.2-06857.run
sudo rm -r pia-linux-3.2-06857.run.1
./pia-linux-3.2-06857.run

fi

sleep 3
clear

echo "Do you want to install my YAY PKGs? 'y' for Yes 'N' to No"
read YN2

if [ $YN2 = "y" ]
  then
 yay -S all-repository-fonts basemark downgrade rpcs3-git ryujinx-ldn-bin yuzu-mainline-bin bash-pipes minecraft-launcher spotify spicetify-cli speedtest-cli-git
fi

sleep 2
clear

echo "do you want to install Custom Spotify theme (you had to install YAY and YAY PKGs) 'y' to install 'N' to not"
read YN3

if [ $YN3 = "y" ]
  then
sudo chmod a+wr /opt/spotify
sudo chmod a+wr /opt/spotify/Apps -R

git clone https://github.com/morpheusthewhite/spicetify-themes.git
cd spicetify-themes
cp -r * ~/.config/spicetify/Themes

spicetify config current_theme Sleek
spicetify config color_scheme Elementary
spicetify config custom_apps lyrics-plus
spicetify config custom_apps new-releases
spicetify backup apply
fi

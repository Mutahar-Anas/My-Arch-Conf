
# PGK install
sudo pacman -Sy
sudo pacman -S ark autoconf automake bashtop binutils bison blueberry bluedevil bluez bluez-utils bpytop bridge-utils btrfs-progs cdrdao cdrtools cmatrix discord dnsmasq dolphin dolphin-emu dvd+rw-tools edk2-ovmf efibootmgr figlet firefox flex fwupd garcon gawk gcc gnome-disk-utility groff gtkmm gvfs gzip htop iptables-nft js78 k3b kate kdenlive lib32-libldap lib32-libva-mesa-driver lib32-mesa libreoffice-fresh libtool libva-intel-driver libva-mesa-driver libvirt libvirt-glib libvirt-python liquidctl lutris m4 make mousepad nano neofetch network-manager-applet obs-studio okteta openbsd-netcat openssh p7zip patch pavucontrol pcsclite pcsx2 pkgconf pulseaudio python-dnspython python-fonttools python-pip python-wheel qbittorrent qemu qemu-arch-extra radeontop ristretto sddm smartmontools steam stress sudo swtpm texinfo tree tumbler util-linux util-linux-libs vde2 vi vim virt-install virt-manager vlc wget which wireless_tools wpa_supplicant xarchiver xfce4 zram-generator zsh btop flameshot amd-ucode signal-desktop gnome-keyring seahorse filezilla gimp

clear
sleep .2

echo "Do you want to install my AMD Drivers? 'y' for Yes 'N' to No"
read YN6

if [ $YN6 = "y" ]
  then
    sudo pacman -S lib32-vulkan-radeon vulkan-radeon amdvlk lib32-amdvlk lib32-mesa-vdpau mesa-vdpau
fi

clear
sleep .2

echo "Do you want to install my Intel Drivers? 'y' for Yes 'N' to No"
read YN7

if [ $YN7 = "y" ]
    then
     sudo pacman -S xf86-video-intel vulkan-intel lib32-vulkan-intel
fi

clear
sleep .2

echo "Do you want to install my NVidia Drivers? 'y' for Yes 'N' to No"
read YN8

if [ $YN8 = "y" ]
    then
     sudo pacman -S nvidia nvidia-utils
     mkdir /etc/pacman.d/hooks/
     cp -r nvidia.hook /etc/pacman.d/hooks/
fi

clear
sleep .3

cd ..

git clone https://aur.archlinux.org/yay.git && cd yay && makepkg -si && yay -Sy

cd need\ files

clear
sleep .2

echo "do you want to install PIA VPN? 'y' for Yes 'N' for No"
read yn4

if [ $yn4 = "y" ]
    then
wget https://installers.privateinternetaccess.com/download/pia-linux-3.2-06857.run
chmod +x *.run
./*.run
piactl background enable
cd ~/PIA
piactl login Login
piactl dedicatedip DIP

fi

sleep 1
clear
sleep .2

echo “do you want to install VMWare 'y' for Yes 'N' for No”
read yn16

if [ $yn16 = ‘y’ ]
	then
sudo pacman -S fuse2 gtkmm linux-headers pcsclite libcanberra && yay -S --noconfirm --needed ncurses5-compat-libs && yay -S --noconfirm --needed  vmware-workstation && sudo systemctl enable vmware-networks.service  vmware-usbarbitrator.service vmware-hostd.service && sudo modprobe -a vmw_vmci vmmon

fi

clear
sleep .4

echo "Do you want to install my YAY PKGs? 'y' for Yes 'N' to No"
read YN42

if [ $YN42 = "y" ]
  then
 yay -S all-repository-fonts basemark downgrade rpcs3-git ryujinx-ldn-bin yuzu-mainline-bin bash-pipes minecraft-launcher spotify spicetify-cli speedtest-cli-git ani-cli
fi

clear
sleep .5

echo "do you want to install Custom Spotify theme (you had to install YAY and YAY PKGs) 'y' to install 'N' to not"
read YN52

if [ $YN52 = "y" ]
  then
sudo chmod a+wr /opt/spotify
sudo chmod a+wr /opt/spotify/Apps -R

git clone https://github.com/morpheusthewhite/spicetify-themes.git
cd spicetify-themes
cp -r * ~/.config/spicetify/Themes
cp -r Extensions ~/.config/spicetify

spicetify config current_theme Sleek
spicetify config color_scheme Elementary
spicetify config custom_apps lyrics-plus
spicetify config custom_apps new-releases
spicetify config extensions copytoclipboard.js
spicetify config extensions fullAlbumDate.js
spicetify config extensions fullAppDisplayMod.js
spicetify config extensions group-session.js
spicetify config extensions QueueTime.js
spicetify config extensions savePlaylists.js
spicetify config extensions toggleFriendActivity.js
spicetify config extensions volumePercentage.js
spicetify backup
spicetify apply
fi

clear
sleep .5

echo "do you want to install My EMU Confs as well?(you had to install YAY and YAY PKGs) 'y' to install 'N' to not"
read YN239

if [ $YN239 = "y" ]
  then
sudo cp -r EMU-Conf-files/rpcs3 ~/.config
sudo cp -r EMU-Conf-files/PCSX2 ~/.config
sudo cp -r EMU-Conf-files/dolphin-emu ~/.config
fi

echo done

